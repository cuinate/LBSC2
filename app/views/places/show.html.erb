<div id="content_sub">
	<div id="content_sub_left">
		
		<div id="pl_header">
			
			
			<div id = "place_icon">
				<%= image_tag "pl_ico.png", :alt => "logo",
				                            :id => "logo"%>
			</div>
			<div class="place_header_summary">
				<div class="list_item_title"><%=@place.name%></div>
				<div class="list_item_desc"><%=@place.address%></div>
			</div>
			<div id="follow_place"></div>
		</div> <!--place/id header end -->
		
		<div id="ql_nav">
			
			<a href="/place/hot"><span id="question_list_active">最新更新</span></a>
			<a href="/question/hot"><span class="inactive">open question </span></a>
			<a href="/question/hot"><span class="inactive">动态</span></a>
			
		</div>
		
		<div id= "question_items">
				<% @place.questions.each do |q|%>
				<div class="question-summary narrow" id="question-summary">
				    <div class="summary">
				        <h3><a href="#" class="question-hyperlink" title="# "><%= q.description%></a></h3>

				        <div class="started">
				            <a href="#" class="started-link"><span title="2010-10-26 01:29:43Z" class="relativetime">9s ago</span></a>
				            <a href="#">提问者</a> 
				        </div>
				    </div> <!--sumary end -->
					<% if (q.answers_count == 0)%>
					<div class="status unanswered" title="#">
					<% else%>
				    <div class="status answered-accepted" title="#">
					<% end %>
			            <div class="mini-counts"><%= q.answers_count%></div>
			            <div>回答</div>
			        </div>
			        <div class="votes">
			            <div class="mini-counts">0</div>
			            <div>投票</div>
			        </div>
				</div>
				<% end %>


			
		</div><!---question item end -->
		
</div> <!--- sub left end -->


	<div id="content_sub_right">
	<%if current_user %>
	<h3 class="inactive">我的关注 -- 地点</h3>
	<ul id="p">
		<li>新中关购物中心</li>
		<li>新中关购物中心</li>
		<li>新中关购物中心</li>
	</ul>
	<h3 id="q" class="inactive">我的关注 -- 问题</h3>
	<ul>
		<li>几点开门</li>
	</ul>
	<% end %>	
	</div>
	<div class="clear"> 
	</div> <!--content right end -->
</div><!-- content sub end -->